<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/parles_signes_fondo"
    android:padding="16dp">

    <!-- Fondo con ilustraciones -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="159dp"
            android:layout_height="192dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:rotation="-15"
            android:src="@drawable/sena5" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="155dp"
            android:layout_height="188dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:rotation="15"
            android:src="@drawable/sena_1" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="132dp"
            android:layout_height="156dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="210dp"
            android:rotation="10"
            android:src="@drawable/sena4" />
    </FrameLayout>

    <!-- Sección de texto y botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/mainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="PARLES + SIGNES"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Una aplicación diseñada para facilitar la comunicación inclusiva entre personas oyentes y personas sordas o con dificultades del habla."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4A4ACB"
            android:drawableEnd="@drawable/cerebro"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:paddingHorizontal="60dp"
            android:text="Iniciar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</LinearLayout>
