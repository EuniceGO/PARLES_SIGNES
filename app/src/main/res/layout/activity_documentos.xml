<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documentos"
    android:background="@color/white">

    <Button
        android:id="@+id/btnRetroceder"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_back"
        android:backgroundTint="@color/black"
        android:onClick="Retroceder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Área de Documentos"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="95dp"
        android:layout_marginStart="40dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:padding="16dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="122dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_doc1"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/estudio_mounstruito"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Documentos"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="DIDÁCTICA DE LA LENGUA
                                    DE SEÑAS ARGENTINA"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Documento de aprendizaje argentino"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnView1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="20dp"
                        android:text="Ver PDF"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="122dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_doc2"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/estudio_mounstruito" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Documentos"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="DICCIONARIO BÁSICO
                                        DE LA
                                        LENGUA DE SEÑAS COLOMBIANA"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="164dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Diccionario en el que podras informarte mucho más sobre el lenguaje de señas en Colombia"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnView2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"
                        android:text="Ver PDF"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="122dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_doc3"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/estudio_mounstruito" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Documentos"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="DICCIONARIO DE LENGUAJE DE SEÑAS MEXICANO"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Diccionario mexicano LSM para aprendizaje y lectura"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnView3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="20dp"
                        android:text="Ver PDF"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="122dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_doc4"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/estudio_mounstruito" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Documentos"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="LENGUAJE DE SEÑAS CHILE"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Diccionario bilingüe - Lenguaje de Señas Chilena"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnView4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="20dp"
                        android:text="Ver PDF"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
